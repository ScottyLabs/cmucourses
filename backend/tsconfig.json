{
  "extends": "ts-node/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "module": "esnext",
    "paths": {
      "~/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*"]
}
